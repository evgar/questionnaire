mixin generateIndicatorValues(indicator)
	fieldset(class='js-level')
		legend(class='js-level__caption') Уровень владения JavaScript
		input(class='js-level__switch' type='range' min = 1 max = 10 step = 1)
		div(class='js-level__indicator')
			- for (var i = 0; i < indicator.length; i++) {
			span(class='js-level__value') #{indicator[i]}
			- }

+generateIndicatorValues(indicatorValues)
