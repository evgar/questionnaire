- var skillsOptions = ['БЭМ/OOCSS','Pug (Jade)','Stylus/LESS/SASS','Работаю с SVG','Верстаю семантично','Accessibility (A11Y)','ES2015/ES2016','Gulp/GRUNT','Webpack','Дружу с WebGL','jQuery','Знаю/изучаю Angular','Знаю/изучаю React','Знаю/изучаю Node.js', 'Использую Git','С глазомером всё ок', 'Читаю #{blogLink}', 'Я ленивый(-ая)', 'У меня хороший английский'];
- var skillsOptionsState = [true,true,true,false,true,false,false,true,false,false,true,true,false,false,true,true,true,false,true]
- var blogLink = 'http://blog.csssr.ru/'
mixin optional-info(checkboxes, state)
	fieldset(class='optional-info')
		legend(class='optional-info__caption') Расскажите о себе чекбоксами
		p(class='optional-info__description') Отметьте чекбоксами пункты, которые соответствуют вашим скиллам. Кстати, отсутствие опыта не означает, что у вас меньше шансов стать одним из наших товарищей. Это означает, что вы будете получать те задачи, с которыми гарантировано будете справляться.
		div(class = 'options-block optional-info__options')
			- for (var i = 0; i < checkboxes.length; i++) {
				label(class='options-block__option') #{checkboxes[i]}
					if (state[i] == true)
						input(class='options-block__checkbox' type='checkbox' checked)
					else
						input(class='options-block__checkbox' type='checkbox')
			- }

+optional-info(skillsOptions, skillsOptionsState)
