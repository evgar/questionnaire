- var skillsOptionsState = [true,true,true,false,true,false,false,true,false,false,true,true,false,false,true,true,true,false,true]
- var inputNames = ['bem','pug','css_preprocessor','svg','semantic_layout','accessibility','es','packages','webpack','webGL','jQuery','angular','react','nodeJs','git','pixelPerfect','blogReader','lazy','english'];
- var blogLink = 'http://blog.csssr.ru/'
mixin optional-info(checkboxes, state, names)
	fieldset(class='optional-info')
		legend(class='optional-info__caption') Расскажите о себе чекбоксами
		p(class='optional-info__description') Отметьте чекбоксами пункты, которые соответствуют вашим скиллам. Кстати, отсутствие опыта не означает, что у вас меньше шансов стать одним из наших товарищей. Это означает, что вы будете получать те задачи, с которыми гарантировано будете справляться.
		div(class = 'options-block optional-info__options')
			- for (var i = 0; i < checkboxes.length; i++) {
			if (state[i] == true)
				input(class='options-block__checkbox options-block__checkbox-disable' type='checkbox' name='#{names[i]}'  checked)
				label(class='options -block__option' for='#{names[i]}') #{checkboxes[i]}
			else
				input(class='options-block__checkbox options-block__checkbox-disable' type='checkbox' name='#{names[i]}')
				label(class='options -block__option' for='#{names[i]}') #{checkboxes[i]}
			- }

+optional-info(skillsOptions, skillsOptionsState, inputNames)
